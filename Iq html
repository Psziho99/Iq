<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IQ Teszt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            padding: 20px;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
        }
        .question {
            margin-bottom: 20px;
        }
        .result {
            display: none;
            font-size: 20px;
            margin-top: 20px;
        }
        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        button:disabled {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>IQ Teszt</h1>
        <form id="iqForm">
            <div class="question">
                <label for="q1">1. Melyik szám következik a sorban: 2, 4, 8, 16?</label><br>
                <input type="radio" name="q1" value="24"> 24<br>
                <input type="radio" name="q1" value="32"> 32<br>
                <input type="radio" name="q1" value="48"> 48<br>
            </div>
            <div class="question">
                <label for="q2">2. Melyik nem illik a sorba?</label><br>
                <input type="radio" name="q2" value="Kutya"> Kutya<br>
                <input type="radio" name="q2" value="Macska"> Macska<br>
                <input type="radio" name="q2" value="Cápa"> Cápa<br>
                <input type="radio" name="q2" value="Oroszlán"> Oroszlán<br>
            </div>
            <!-- További kérdések itt -->
            <button type="button" id="submitBtn" disabled>Beküldés</button>
        </form>
        <div class="result" id="result">
            Az IQ pontszámod: <span id="iqScore"></span>
        </div>
    </div>
    <script>
        const form = document.getElementById('iqForm');
        const submitBtn = document.getElementById('submitBtn');
        const resultDiv = document.getElementById('result');
        const iqScoreSpan = document.getElementById('iqScore');

        // Ellenőrizzük, hogy minden kérdésre válaszoltak-e
        form.addEventListener('change', () => {
            const allAnswered = [...form.elements].every(input => {
                return input.type !== 'radio' || input.checked;
            });
            submitBtn.disabled = !allAnswered;
        });

        // Beküldés kezelése
        submitBtn.addEventListener('click', () => {
            const formData = new FormData(form);
            let score = 0;

            // Egyszerű helyes válaszok
            if (formData.get('q1') === '32') score += 1;
            if (formData.get('q2') === 'Cápa') score += 1;

            // Küldés a backendre és megjelenítés
            fetch('/api/submit-iq-test', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ score })
            })
            .then(response => response.json())
            .then(data => {
                iqScoreSpan.textContent = data.iq;
                resultDiv.style.display = 'block';
            })
            .catch(err => console.error('Error:', err));
        });
    </script>
</body>
</html>
